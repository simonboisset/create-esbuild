{
  "name": "esbuild-run-turbo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=esbuild-run",
    "dev": "turbo run dev --filter=esbuild-run",
    "publish:major": "turbo run publish:major --filter=esbuild-run",
    "publish:minor": "turbo run publish:minor --filter=esbuild-run",
    "publish:patch": "turbo run publish:patch --filter=esbuild-run",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "esbuild-run": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.5"
}
